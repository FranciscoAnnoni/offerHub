<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShoppingAdminActivity">

        <fragment
            android:id="@+id/mainAppAdminFragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/shopping_admin_graph"
            app:layout_constraintBottom_toTopOf="@id/bottomNavigationAdmin"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationAdmin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:menu="@menu/bottom_navigation_admin_menu"
            android:background="@color/white"
            app:labelVisibilityMode="unlabeled"
            android:elevation="20dp"
            app:itemPaddingTop="10dp"
            app:itemPaddingBottom="10dp"
            app:itemRippleColor="@color/white"
            app:itemIconTint="@drawable/bottom_nav_item_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>