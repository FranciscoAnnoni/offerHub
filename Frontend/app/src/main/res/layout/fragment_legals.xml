<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rapLayourLegal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageCloseLegals"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/violeta" />

        <LinearLayout
            android:layout_gravity="center"
            android:id="@+id/linearLayourLegal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/icono"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_background"
                android:backgroundTint="@color/violeta"
                android:padding="7dp"
                android:src="@drawable/ic_exclamation"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/inicioHome"
                style="@style/titulos"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:contentDescription="@null"
                android:text="Legales"
                app:layout_constraintHorizontal_bias="1.0" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/privacidad"
        style="@style/textoChicoNegro"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Política de privacidad"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rapLayourLegal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/legales1"
        style="@style/textoChicoNegro"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Esta Política de privacidad describe cómo se recopilan, utilizan y protegen los datos personales en relación con el uso de la aplicación OfferHub. Al utilizar esta aplicación, aceptas los términos y condiciones establecidos en esta Política de privacidad."
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacidad"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/recopilacionDeDatos"
        style="@style/textoChicoNegro"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Recopilación de datos"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legales1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/legales2"
        style="@style/textoChicoNegro"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="La aplicación OfferHub no recopila ni almacena ningún dato bancario o información financiera personal. No solicitamos ni requerimos números de tarjetas de crédito, información de cuentas bancarias u otros datos similares."
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recopilacionDeDatos"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/legales3"
        style="@style/textoChicoNegro"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Recopilamos y utilizamos únicamente la información necesaria para el funcionamiento y la mejora de la aplicación. Esto puede incluir datos como tu nombre de usuario, dirección de correo electrónico y preferencias de configuración. Estos datos se utilizan para personalizar tu experiencia en la aplicación y proporcionarte los servicios solicitados"
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legales2"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/datosPersonales"
        style="@style/textoChicoNegro"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Uso de datos"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/legales3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/legales4"
        style="@style/textoChicoNegro"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Los datos personales que recopilamos se utilizan únicamente con el propósito de brindar y mejorar los servicios de la aplicación [nombre de la aplicación]. No compartimos, vendemos ni transferimos tus datos personales a terceros sin tu consentimiento, excepto cuando sea necesario para cumplir con las leyes aplicables, las solicitudes legales o proteger nuestros derechos, propiedad o seguridad."
        tools:ignore="MissingConstraints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datosPersonales"
        android:layout_marginTop="2dp"
        android:paddingBottom="15dp"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>





