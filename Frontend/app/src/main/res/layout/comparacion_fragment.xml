        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjetas"
                android:textColor="@color/g_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tarje2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tarjetas disponibles prmomo2"
                android:textColor="@color/g_blue"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- Aquí puedes poner los elementos adicionales para mostrar la información de la promoción 2 -->
    </LinearLayout>
    </LinearLayout>
</LinearLayout>