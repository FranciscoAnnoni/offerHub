<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/search_category_background">

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:padding="5dp"
        android:layout_margin="10dp"
        app:tint="@color/g_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/promocion1Container"
        android:layout_width="190dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Título Promoción 1"
            android:textColor="@color/g_dark_blue"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de vencimiento"
                android:textColor="@color/g_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hasta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Fecha vencimiento promoción 1"
                android:textColor="@color/g_blue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de beneficio"
                android:textColor="@color/g_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/promoBenef1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tope promoción 1"
                android:textColor="@color/g_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/reintegro1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="reintegro 1"
                android:textColor="@color/g_blue"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponibilidad"
                android:textColor="@color/g_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dias1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dias disponibles prmomo1"
                android:textColor="@color/g_blue"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjetas"
                android:textColor="@color/g_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tarje1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tarjetas disponibles prmomo1"
                android:textColor="@color/g_blue"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- Aquí puedes poner los elementos adicionales para mostrar la información de la promoción 1 -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/promocion2Container"
        android:layout_width="190dp"
        android:layout_height="match_parent"
