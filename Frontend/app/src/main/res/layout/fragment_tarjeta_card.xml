<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fondo"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/cuadrado1"
        android:layout_width="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="140dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/border_promocion"
        >

        <!-- Agrega tu imagen aquí -->
        <ImageView
            android:id="@+id/imgBanco"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="10dp"
            android:src="@drawable/offerhub_logo"
            android:background="@drawable/border_imagen_promocion"

            />

        <!-- Agrega tu texto aquí -->
        <TextView
            android:id="@+id/txtBanco"
            style="@style/blueButtonStyle"
            android:textColor="@color/g_light_purple"
            app:layout_constraintTop_toBottomOf="@id/imgBanco"
            android:layout_width="match_parent"
            android:maxWidth="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Banco"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/txtSegmento"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/txtBanco"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:maxWidth="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Banco"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/txtProcesadora"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/txtSegmento"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:maxWidth="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Banco"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/txtTipoTarjeta"
            style="@style/blueButtonStyle"
            app:layout_constraintTop_toBottomOf="@id/txtProcesadora"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:maxWidth="100dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Banco"
            android:textSize="14sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
