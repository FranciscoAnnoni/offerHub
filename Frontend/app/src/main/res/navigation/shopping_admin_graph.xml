<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_graph"
    app:startDestination="@id/homeAdminFragment">

    <fragment
        android:id="@+id/homeAdminFragment"
        android:name="com.example.offerhub.fragments.admin.HomeAdminFragment"
        android:label="HomeAdminFragment"
        tools:layout="@layout/fragment_home_admin"
        />

    <fragment
        android:id="@+id/adminProfileFragment"
        android:name="com.example.offerhub.fragments.admin.AdminProfileFragment"
        android:label="AdminProfileFragment"
        tools:layout="@layout/fragment_profile_admin"
        >

        <action
            android:id="@+id/action_adminProfileFragment_to_adminUserAccountFragment"
            app:destination="@id/adminUserAccountFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminUserAccountFragment"
        android:name="com.example.offerhub.fragments.admin.AdminUserAccountFragment"
        android:label="AdminUserAccountFragment"
        tools:layout="@layout/fragment_admin_user_account"
        >

        <action
            android:id="@+id/action_adminUserAccountFragment_to_adminProfileFragment"
            app:destination="@id/adminProfileFragment" />
    </fragment>
</navigation>


