<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--...............Todos los Styles de los Login y Registros de Usuario y Empresa...................            -->

    <!-- Cuadrado de cargar tarjeta-->
    <style name="cargarTarjetaVioleta">
        <item name="android:background">@drawable/rounded_cargar_tarjeta</item>
    </style>

    <style name="cargarTarjetablanco">
        <item name="android:background">@drawable/rounded_cargar_tarjeta_blanco</item>
        <item name="android:elevation">1dp</item> <!-- Agrega elevación para la sombra -->
        <item name="android:translationZ">0.7dp</item> <!-- Cambia la elevación para la sombra -->
    </style>
    <style name="Widget.Material3.Chip.Filter" parent="Base.Widget.Material3.Chip">
        <item name="android:checkable">true</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>

        <item name="checkedIcon">@drawable/ic_m3_chip_check</item>

        <item name="shapeAppearance">@macro/m3_comp_filter_chip_container_shape</item>
        <item name="android:textAppearance">@macro/m3_comp_filter_chip_label_text_type</item>
        <item name="chipMinHeight">@dimen/m3_comp_filter_chip_container_height</item>
        <item name="chipIconSize">@dimen/m3_comp_filter_chip_with_icon_icon_size</item>
        <item name="chipStrokeWidth">@dimen/m3_comp_filter_chip_flat_unselected_outline_width</item>

        <item name="chipStartPadding">8dp</item>
        <item name="iconStartPadding">0dp</item>

        <item name="iconEndPadding">-2dp</item>
        <item name="textStartPadding">8dp</item>
        <item name="textEndPadding">6dp</item>

        <item name="closeIconStartPadding">-2dp</item>
        <item name="closeIconEndPadding">0dp</item>
        <item name="chipEndPadding">10dp</item>
    </style>
    <style name="Widget.Material3.BottomSheet.Modal">
        <item name="android:elevation">@dimen/m3_bottom_sheet_modal_elevation</item>
    </style>
    <style name="Widget.Material3.Button" parent="Widget.MaterialComponents.Button">
        <item name="enforceTextAppearance">false</item>
        <item name="android:maxWidth">@dimen/m3_btn_max_width</item>
        <item name="android:paddingLeft">@dimen/m3_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/m3_btn_padding_right</item>
        <item name="android:paddingTop">@dimen/m3_btn_padding_top</item>
        <item name="android:paddingBottom">@dimen/m3_btn_padding_bottom</item>
        <item name="android:insetTop">@dimen/m3_btn_inset</item>
        <item name="android:insetBottom">@dimen/m3_btn_inset</item>
        <item name="android:textAppearance">@macro/m3_comp_filled_button_label_text_type</item>
        <item name="shapeAppearance">@style/ShapeAppearance.M3.Comp.FilledButton.Container.Shape</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.Button</item>
        <item name="android:stateListAnimator">@animator/m3_btn_state_list_anim</item>
        <item name="elevation">@dimen/m3_comp_filled_button_container_elevation</item>
        <item name="android:textColor">@color/m3_button_foreground_color_selector</item>
        <item name="iconTint">@color/m3_button_foreground_color_selector</item>
        <item name="iconSize">@dimen/m3_comp_filled_button_with_icon_icon_size</item>
        <item name="backgroundTint">@color/m3_button_background_color_selector</item>
        <item name="rippleColor">@color/m3_button_ripple_color_selector</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item> <!-- Cambia colorAccent a tu color deseado -->
    </style>


    <!-- Es para la reutilizacion de las casillas del registro y login -->
    <style name="EditTextRounded">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_text_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:elevation">0.9dp</item> <!-- Agrega elevación para la sombra -->
        <item name="android:translationZ">0.5dp</item> <!-- Cambia la elevación para la sombra -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FormFieldSemiRound">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/semi_rounded_text_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:elevation">0.9dp</item> <!-- Agrega elevación para la sombra -->
        <item name="android:translationZ">0.5dp</item> <!-- Cambia la elevación para la sombra -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Es para la reutilizacion de los botones pero todavia no logro utilizarlo -->
    <style name="RoundedButtonBackground">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item> <!-- Fondo personalizado -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation</item> <!-- Estilo de animación -->
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="RoundedButtonBackgroundLight">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/g_light_purple</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Cuadrados de el search category en el buscador -->
    <style name="searchCategoryBackground">
        <item name="android:background">@drawable/rectangle_category_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- Es para la reutilizacion de los Titulos grandes del registro y login de color violeta-->
    <style name="titulos">
        <item name="android:textColor">@color/violeta</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Es para la reutilizacion de los textos pequenios del registro y login de color violeta -->
    <style name="textoChicoVioleta">
        <item name="android:textColor">@color/violetaMasClaro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Es para la reutilizacion de los textos pequenios del registro y login de color negro -->
    <style name="textoChicoNegro">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textoMedianoNegro">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/g_black</item>
        <item name="android:textSize">@dimen/h4TextSize</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h3TextSize</item>
    </style>

    <style name="blueButtonStyle">
        <!-- <item name="android:background">@drawable/blue_background</item> -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2TextSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="whiteButtonStyle">
        <!-- <item name="android:background">@drawable/white_background</item> -->
       <item name="android:fontFamily">@font/poppins_thin</item>
       <item name="android:textColor">@color/black</item>
       <item name="android:textSize">@dimen/h2TextSize</item>
       <item name="android:textAllCaps">false</item>
   </style>

   <style name="editText">
       <!--  <item name="android:background">@drawable/white_background</item> -->
       <item name="android:gravity">center</item>
       <item name="singleLine">true</item>
       <item name="android:textStyle">bold</item>
       <item name="android:fontFamily">@font/poppins_light</item>
   </style>

   <dimen name="h4TextSize">35sp</dimen>
   <dimen name="h2TextSize">17sp</dimen>
   <dimen name="h3TextSize">22sp</dimen>


    <style name="tabLayout_text" parent="TextAppearance.AppCompat">
        <item name="color">@color/black</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MediumTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTextViewThin">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SmallTextViewThin">
        <item name="android:textColor">@color/g_gray700</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="customSwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/violetaClaro</item>
        <item name="android:trackTint">@color/violetaMasClaro</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="RoundedCornersDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowBackground">@drawable/search_box_background</item>
        <item name="android:textColor">@color/violetaMasClaro</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="roundedCornersImageView" parent="" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

</resources>