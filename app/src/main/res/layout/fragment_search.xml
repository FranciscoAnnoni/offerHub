<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <TextView
        android:id="@+id/buscador"
        style="@style/titulos"
        android:text="Buscador"
        android:layout_marginTop="25dp"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/primeraLinearLayoutBuscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buscador">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/searchBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_text_background">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingStart="15dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text="Buscar Promocion"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_filter"
            android:layout_marginStart="8dp"
            android:background="@drawable/icon_background"
            android:padding="10dp"
            />

    </LinearLayout>
        <!--................... Aca arranca la parte de abajo del buscador .................. -->
    <LinearLayout
        android:id="@+id/sergundaLinearLayoutBuscador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/primeraLinearLayoutBuscador"
        android:background="@drawable/bottom_navigation_background">

        <TextView
            android:id="@+id/buscarCategoria"
            style="@style/textoChicoVioleta"
            android:text="Buscar por Categoria"
            android:textSize="20sp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:contentDescription="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <!--............ GridLayout para los cuadrados ...............-->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buscarCategoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Cuadrado 1 -->
            <LinearLayout
                style="@style/searchCategoryBackground"
                android:id="@+id/cuadrado1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="10dp">

                <!-- Agrega tu imagen aquí -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"/>

                <!-- Agrega tu texto aquí -->
                <TextView
                    style="@style/blueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entretenimiento"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <!-- Cuadrado 2 -->
            <LinearLayout
                style="@style/searchCategoryBackground"
                android:id="@+id/cuadrado2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="10dp">

                <!-- Agrega tu imagen aquí -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"/>

                <!-- Agrega tu texto aquí -->
                <TextView
                    style="@style/blueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indumentaria"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <!-- Cuadrado 3 -->
            <LinearLayout
                style="@style/searchCategoryBackground"
                android:id="@+id/cuadrado3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="10dp">

                <!-- Agrega tu imagen aquí -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"/>

                <!-- Agrega tu texto aquí -->
                <TextView
                    style="@style/blueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gastronomia"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <!-- Cuadrado 4 -->
            <LinearLayout
                style="@style/searchCategoryBackground"
                android:id="@+id/cuadrado4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="10dp">

                <!-- Agrega tu imagen aquí -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"/>

                <!-- Agrega tu texto aquí -->
                <TextView
                    style="@style/blueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronica"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <!-- Cuadrado 5 -->
            <LinearLayout
                style="@style/searchCategoryBackground"
                android:id="@+id/cuadrado5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="10dp">

                <!-- Agrega tu imagen aquí -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"/>

                <!-- Agrega tu texto aquí -->
                <TextView
                    style="@style/blueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viajes y Turismo"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>
            </LinearLayout>


            <!-- Cuadrado 6 -->
            <LinearLayout
                style="@style/searchCategoryBackground"
                android:id="@+id/cuadrado6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:gravity="center"
                android:layout_margin="8dp"
                android:padding="10dp">

                <!-- Agrega tu imagen aquí -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_search"
                    android:layout_gravity="center"/>

                <!-- Agrega tu texto aquí -->
                <TextView
                    style="@style/blueButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deporte"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </GridLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>